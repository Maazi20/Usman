<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/_25sdp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.haseebelahi.usman.ChangePassword">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Change Passowrd"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/curr_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Current Passowrd"
        android:inputType="textPassword"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/_35sdp"/>

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="New Passowrd"
        android:inputType="textPassword"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/curr_pass"
        android:layout_marginTop="@dimen/_25sdp"/>

    <EditText
        android:id="@+id/new_pass_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Repeat New Passowrd"
        android:inputType="textPassword"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/new_pass"
        android:layout_marginTop="@dimen/_25sdp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_pass_btn"
        android:layout_below="@id/new_pass_r"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:text="Change Password"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"/>

</RelativeLayout>
